<Window
    x:Class="AutoUpdaterWPF.DownloadUpdate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="DownloadUpdateWindow"
    Title="Software update"
    Width="370"
    Height="117"
    x:ClassModifier="internal"
    Icon="pack://siteoforigin:,,,/Resources/update.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid
            Width="53"
            Height="53"
            Margin="13,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Image
                Loaded="DownloadUpdateDialogLoad"
                Source="pack://siteoforigin:,,,/Resources/download_32.png"
                Stretch="None" />
        </Grid>
        <TextBlock
            x:Name="TextBlockInformation"
            Margin="72,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="14"
            Text="Downloading Update..."
            TextWrapping="Wrap" />
        <ProgressBar
            x:Name="ProgressBar"
            Width="270"
            Height="23"
            Margin="72,42,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
    </Grid>
</Window>